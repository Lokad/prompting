<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1</TargetFrameworks>
    <AssemblyName>Lokad.Prompting</AssemblyName>
    <RuntimeIdentifiers>win</RuntimeIdentifiers>
    <OutputType>Library</OutputType>
    <Company>Lokad</Company>
    <Copyright>Copyright Â© Lokad 2023-2024</Copyright>

    <AssemblyVersion>0.8.2.0</AssemblyVersion>
    <FileVersion>0.8.2</FileVersion>
    <PackageId>Lokad.Prompting</PackageId>
    <PackageVersion>0.8.2</PackageVersion>
    <LangVersion>10.0</LangVersion>
    <Version>0.8.2</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/Lokad/Prompting</PackageProjectUrl>
    <Description>Simple kernels for LLMs, C#/.NET library</Description>
    <authors>Joannes Vermorel</authors>
    <PackageReadmeFile>ReadMe.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>

    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.AI.OpenAI" Version="1.0.0-beta.12" />
    <PackageReference Include="Azure.Identity" Version="1.10.4" />
    <PackageReference Include="SharpToken" Version="1.0.25" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\ReadMe.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
